@inherits LayoutComponentBase

<!--
This is the main layout component for the application. It defines the common structure, 
such as the header, sidebar/navigation menu, and the main content area where pages are rendered.
It provides a consistent look and feel across all pages.
-->
<MudThemeProvider />
<MudDialogProvider />

<!-- As per SDS 6.1, the SnackbarProvider is hosted here to be globally available for the NotificationService. -->
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">OPC System</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Navigation</MudText>
        </MudDrawerHeader>
        <!-- The navigation menu component is rendered here. -->
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-4 pt-4">
            <!-- The @Body directive specifies where the content of individual routable pages will be rendered. -->
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}