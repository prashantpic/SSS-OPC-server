{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ManagementDbContext": "Server=(localdb)\\mssqllocaldb;Database=ManagementServiceDb;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=False"
  },
  "ServiceEndpoints": {
    "DataService": "http://localhost:5001", // Placeholder for DataService URL
    "SecurityService": "http://localhost:5002", // Placeholder for SecurityService URL
    "DeploymentOrchestrationService": "http://localhost:5003" // Placeholder for Deployment Orchestration Service URL
  },
  "PollyConfigs": {
    "DefaultRetryCount": 3,
    "DefaultTimeoutSeconds": 30
  },
  "FeatureFlags": {
    "EnableConfigurationSchemaValidationOnMigration": true
  }
}