{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Information"
      }
    }
  },
  "OpenTelemetry": {
    "Exporter": {
      "Otlp": {
        "Endpoint": "http://localhost:4317"
      }
    }
  },
  "IntegrationSettings": {
    "MessageBroker": {
      "HostName": "localhost",
      "OpcDataInputQueueName": "opc_data_integration_queue_dev"
    },
    "IoTPlatformSettings": {
      "Platforms": [
        {
          "Id": "mqtt-platform-dev",
          "Type": "MQTT",
          "Endpoint": "mqtt://localhost:1883", // Use a local MQTT broker like Mosquitto
          "Authentication": {
            "CredentialIdentifier": "mqttDevCredentials",
            "Username": "devuser",
            "Password": "devpassword", // For local dev only
            "ClientId": "integration-service-dev-mqtt-client"
          },
          "DataFormat": "JSON",
          "MappingRuleId": "SamplePlatformMapping",
          "DefaultPublishTopic": "telemetry/dev/{deviceId}",
          "CommandSubscriptionTopic": "commands/dev/+/+/+",
          "CommandResponseTopicTemplate": "commands/response/dev/{deviceId}/{commandName}/{correlationId}"
        }
      ]
    },
    "BlockchainSettings": {
      "RpcUrl": "http://localhost:7545", // Ganache default UI port
      "SmartContractAddress": "0xDeployedContractAddressOnGanache",
      "CredentialIdentifier": "blockchainDevSignerCredentials" // e.g., a known private key from Ganache
    },
    "DigitalTwinSettings": {
      "Twins": [
        {
          "Id": "dt-instance-dev",
          "Endpoint": "http://localhost:5050/api/digitaltwins", // Mock Digital Twin API endpoint
          "CredentialIdentifier": "digitalTwinDevCredentials",
          "SyncFrequencySeconds": 60
        }
      ]
    },
    "SecuritySettings": {
      "CredentialManager": {
        "Type": "LocalFile",
        "LocalFilePath": "secure-credentials.dev.json"
      }
    },
    "IntegrationServiceMiscSettings": {
      "EnableAmqpIntegration": false,
      "EnableHttpIoTIntegration": false
    }
  }
}