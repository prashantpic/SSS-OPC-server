{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "IntegrationService": "Debug"
    }
  },
  "IntegrationSettings": {
    "IoTPlatformSettings": {
      "Platforms": [
        {
          "Id": "DevMqttPlatform",
          "Type": "MQTT",
          "Endpoint": "mqtt://localhost:1883",
          "Authentication": {
            "Type": "UsernamePassword",
            "Username": "devuser",
            "CredentialKey": "DevMqttPassword" 
          },
          "DataFormat": "JSON",
          "MappingRuleId": "SamplePlatformMapping",
          "EnableBiDirectional": true
        }
      ]
    },
    "BlockchainSettings": {
      "RpcUrl": "http://localhost:7545", 
      "ChainId": 5777, 
      "SmartContractAddress": "0xYourDevContractAddressDeployedOnGanache", 
      "CredentialKey": "DevBlockchainPrivateKey", 
      "GasPriceStrategy": "Fast",
      "CriticalDataCriteria": {
        "Enabled": true,
        "OpcTagMatchPatterns": ["ns=*;s=TestTag.*"],
        "MinSeverityLevel": "Warning"
      }
    },
    "DigitalTwinSettings": {
      "Twins": [
        {
          "Id": "DevDigitalTwin",
          "Type": "AzureDigitalTwins", 
          "Endpoint": "https://dev-your-adt-instance.api.wcus.digitaltwins.azure.net",
          "Authentication": {
            "Type": "ServicePrincipal",
            "ClientId": "your-dev-sp-client-id",
            "CredentialKey": "DevClientSecret", 
            "TenantId": "your-azure-tenant-id"
          },
          "DataMappingRuleId": "DigitalTwinMapping1",
          "SyncFrequencySeconds": 60,
          "TargetModelId": "dtmi:com:example:DevThermostat;1",
          "EnableBiDirectional": true
        }
      ]
    }
  },
  "SecurityConfigs": {
    "CredentialManagerType": "EnvironmentVariables", 
    "VaultUri": ""
  },
  "ResiliencyConfigs": {
    "DefaultRetryAttempts": 1,
    "DefaultRetryDelaySeconds": 1,
    "DefaultCircuitBreakerThresholdExceptionsAllowed": 3,
    "DefaultCircuitBreakDurationSeconds": 10
  },
  "DevMqttPassword": "your_dev_mqtt_password_here",
  "DevBlockchainPrivateKey": "your_dev_blockchain_private_key_for_ganache_here",
  "DevClientSecret": "your_dev_service_principal_secret_here"
}