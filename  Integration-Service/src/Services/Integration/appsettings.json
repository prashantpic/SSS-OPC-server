{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "IntegrationService": "Information" 
    }
  },
  "AllowedHosts": "*",
  "IntegrationSettings": {
    "IoTPlatformSettings": {
      "Platforms": [
        {
          "Id": "MyMqttPlatform_1",
          "Type": "MQTT",
          "Endpoint": "mqtt://mqtt.eclipseprojects.io:1883",
          "Authentication": {
            "Type": "None" 
          },
          "DataFormat": "JSON",
          "MappingRuleId": "SamplePlatformMapping",
          "EnableBiDirectional": true 
        }
      ]
    },
    "BlockchainSettings": {
      "RpcUrl": "http://localhost:8545", 
      "ChainId": 1337,
      "SmartContractAddress": "0x0000000000000000000000000000000000000000", 
      "CredentialKey": "BlockchainPrivateKey", 
      "GasPriceStrategy": "Standard",
      "CriticalDataCriteria": {
        "Enabled": true,
        "OpcTagMatchPatterns": ["ns=1;s=CriticalTag.*", "MyPlant.Area1.PumpSpeed"],
        "MinSeverityLevel": "High" 
      }
    },
    "DigitalTwinSettings": {
      "Twins": [
        {
          "Id": "MyDigitalTwin_1",
          "Type": "AzureDigitalTwins", 
          "Endpoint": "https://your-adt-instance.api.wcus.digitaltwins.azure.net",
          "Authentication": {
            "Type": "ManagedIdentity", 
            "TenantId": "your-azure-tenant-id" 
          },
          "DataMappingRuleId": "DigitalTwinMapping1",
          "SyncFrequencySeconds": 300, 
          "TargetModelId": "dtmi:com:example:Thermostat;1",
          "EnableBiDirectional": true
        }
      ]
    },
    "AsyncQueueNameForBlockchainProcessing": "integration_blockchain_log_queue",
    "OpcDataInputQueueName": "integration_opc_data_stream",
    "MappingRulePathBase": "Mappings"
  },
  "FeatureFlags": {
    "EnableMqttIntegration": true,
    "EnableAmqpIntegration": false, 
    "EnableHttpIoTIntegration": false,
    "EnableBlockchainLogging": true,
    "EnableDigitalTwinSync": true,
    "EnableIoTRuleBasedMapping": true,
    "EnableBiDirectionalIoT": true
  },
  "SecurityConfigs": {
    "CredentialManagerType": "Configuration", 
    "VaultUri": "", 
    "DefaultTenantIdForCloudServices": "your-azure-tenant-id"
  },
  "ResiliencyConfigs": {
    "DefaultRetryAttempts": 3,
    "DefaultRetryDelaySeconds": 2,
    "DefaultCircuitBreakerThresholdExceptionsAllowed": 5,
    "DefaultCircuitBreakDurationSeconds": 30
  }
}