{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Ocelot": "Debug",
      "Yarp.ReverseProxy": "Debug",
      "GatewayService": "Debug" // For custom logs from your service
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5200" // Different port for local dev if needed
      },
      "Https": {
        "Url": "https://localhost:5201"
      }
    }
  },
  "SecurityConfigs": {
    "JwtAuthority": "https://localhost:8443/realms/your-dev-realm", // Local Keycloak example
    "JwtAudience": "api_gateway_resource_dev",
    "AllowedCorsOrigins": [
      "http://localhost:3000", // React dev server
      "https://localhost:3000",
      "http://localhost:4200", // Angular dev server
      "https://localhost:4200",
      "http://localhost:5173"  // Vite/Vue dev server
    ]
  },
  "ServiceEndpoints": {
    "ManagementServiceBaseUrl": "http://localhost:7001",
    "AiProcessingServiceBaseUrl": "http://localhost:7002",
    "DataServiceBaseUrl": "http://localhost:7003",
    "DataServiceGrpcUrl": "http://localhost:7051", // Local gRPC port for DataService
    "IntegrationServiceBaseUrl": "http://localhost:7004",
    "SecurityServiceBaseUrl": "http://localhost:7005"
  },
  "MqttBrokerConfig": {
    "IsEnabled": false,
    "Address": "localhost",
    "Port": 1883
  },
  "CacheSettings": {
    "Provider": "InMemory", // Use InMemory cache for simpler local development
    "ConnectionString": "" // Not needed for InMemory
  },
  "RateLimitingPolicies": [
    {
      "RuleName": "RelaxedDefaultRouteLimit",
      "Endpoint": "*",
      "Period": "1s",
      "Limit": 100 // Higher limit for development
    }
  ],
  "PollyPolicies": {
    "DefaultRetryCount": 1,
    "DefaultTimeoutSeconds": 60 // Longer timeout for debugging
  },
  "FeatureFlags": {
    "EnableGraphQLSupport": true,
    "EnableYarpIntegration": true,
    "EnableOcelotRequestAggregation": true,
    "EnableMqttProtocolHandler": false,
    "EnableDistributedCaching": false, // Use InMemory cache via CacheSettings.Provider
    "EnableSchemaValidationMiddleware": true, // Enable for testing
    "EnableSwagger": true
  }
}