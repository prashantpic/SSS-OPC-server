{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Ocelot": "Debug",
      "Yarp.ReverseProxy": "Debug",
      "GatewayService": "Debug" // For custom logs from this service
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:7200"
      },
      "HttpsInlineCertStore": {
        "Url": "https://localhost:7201"
        // Certificate settings from appsettings.json are usually fine for dev localhost
      }
    }
  },
  "SecurityConfigs": {
    "JwtAuthority": "http://localhost:5005", // Example: Local Keycloak or IdentityServer
    "JwtAudience": "api_gateway_resource_dev",
    "RequireHttpsMetadata": false // Allow HTTP for local IdP during development
  },
  "ServiceEndpoints": {
    "ManagementService": "http://localhost:7001", // Local dev endpoint for Management Service
    "AiService": "http://localhost:7002",       // Local dev endpoint for AI Service
    "DataService": "http://localhost:7003",       // Local dev endpoint for Data Service
    "IntegrationService": "http://localhost:7004",// Local dev endpoint for Integration Service
    "ManagementServiceGrpc": "http://localhost:5051", // Local dev gRPC endpoint
    "DataServiceGrpc": "http://localhost:5052",       // Local dev gRPC endpoint
    "SecurityService": "http://localhost:5005"      // Local dev Security Service
  },
  "MqttBrokerConfig": {
    "Host": "localhost", // Connect to local MQTT broker for dev
    "Port": 1883
  },
  "CacheSettings": {
    "RedisConnectionString": "localhost:6379", // Use local Redis for dev
    "DefaultExpirationMinutes": 5 // Shorter expiration for easier testing
  },
  "RateLimitingPolicies": {
    "DefaultGlobalPolicy": {
      "Period": "1s",
      "Limit": 100 // Higher limits for dev testing
    }
  },
  "PollyPolicies": {
    "DefaultRetryCount": 1, // Fewer retries for faster failures in dev
    "DefaultTimeoutSeconds": 5 // Shorter timeout
  },
  "FeatureFlags": {
    "EnableMqttProtocolHandler": true,
    "EnableSchemaValidation": true, // Enable for testing in dev
    "EnableGraphQLPlayground": true
  },
  "AllowedCorsOrigins": [
    "http://localhost:3000",
    "http://localhost:3001", // Another local frontend
    "https://localhost:3000",
    "https://localhost:3001"
  ]
}