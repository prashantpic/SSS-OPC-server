{
  "Routes": [
    {
      "UpstreamPathTemplate": "/api/management/{everything}",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001 // Example: Local Management Service port
        }
      ],
      "AuthenticationOptions": {
        // "AuthenticationProviderKey": null // Uncomment to disable auth for this route in dev
      },
      "RateLimitOptions": {
        "EnableRateLimiting": false // Disable rate limiting for easier local testing
      }
    },
    {
      "UpstreamPathTemplate": "/api/ai/{everything}",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7002 // Example: Local AI Service port
        }
      ],
      "RateLimitOptions": {
        "EnableRateLimiting": false
      }
    },
    {
      "UpstreamPathTemplate": "/api/data/{everything}",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7003 // Example: Local Data Service port
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/integration/{everything}",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7004 // Example: Local Integration Service port
        }
      ]
    },
    // Override individual routes for aggregation
    {
      "Key": "management_status",
      "DownstreamHostAndPorts": [ { "Host": "localhost", "Port": 7001 } ]
    },
    {
      "Key": "latest_alerts",
      "DownstreamHostAndPorts": [ { "Host": "localhost", "Port": 7003 } ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5001", // Or http://localhost:5000
    "RateLimitOptions": {
      // "DisableRateLimiting": true // Globally disable rate limiting
    },
    "QoSOptions": {
      "TimeoutValue": 15000 // Longer default timeout for dev
    }
  }
}