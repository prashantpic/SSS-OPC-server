{
  "ConnectionStrings": {
    "WorkflowDb": "Server=(localdb)\\mssqllocaldb;Database=OrchestratorWorkflowDb;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=False"
  },
  "WorkflowEngine": {
    "PollInterval": "00:00:10",
    "ErrorRetryInterval": "00:00:30",
    "MaxRetries": 5
  },
  "ServiceEndpoints": {
    "AiServiceUrl": "http://localhost:5001",
    "DataServiceUrl": "http://localhost:5002",
    "IntegrationServiceUrl": "http://localhost:5003",
    "ManagementServiceUrl": "http://localhost:5004"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "WorkflowCore": "Information"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentUserName" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/OrchestratorService-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "buffered": false,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Properties": {
      "Application": "OrchestrationService"
    }
  },
  "AllowedHosts": "*"
}