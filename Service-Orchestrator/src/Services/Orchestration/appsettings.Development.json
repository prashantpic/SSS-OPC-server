{
  "ConnectionStrings": {
    "WorkflowDb": "Server=(localdb)\\mssqllocaldb;Database=OrchestratorWorkflowDb_Dev;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=False"
  },
  "WorkflowEngine": {
    "PollInterval": "00:00:05",
    "ErrorRetryInterval": "00:00:10",
    "MaxRetries": 3
  },
  "ServiceEndpoints": {
    "AiServiceUrl": "http://localhost:5201",
    "DataServiceUrl": "http://localhost:5202",
    "IntegrationServiceUrl": "http://localhost:5203",
    "ManagementServiceUrl": "http://localhost:5204"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "WorkflowCore": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/OrchestratorService_Dev-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 3,
          "buffered": false,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}