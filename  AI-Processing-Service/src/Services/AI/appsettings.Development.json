{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Information"
      }
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:7002" // Different port for dev to avoid conflict
      },
      "Grpc": {
        "Url": "http://localhost:7003", // Different port for dev
        "Protocols": "Http2"
      }
    }
  },
  "FeatureManagement": {
    "EnableMlflowIntegration": true, // May enable for local testing
    "EnableAzureMLIntegration": false,
    "UseSpaCyNlp": true,
    "UseAzureCognitiveNlp": false
  },
  "ServiceEndpoints": {
    "DataServiceGrpcUrl": "http://localhost:5014", // Dev DataService gRPC endpoint
    "MlflowUrl": "http://localhost:5000", // Local MLflow instance
    "AzureCognitiveServicesEndpoint": "https://dev-language-service.cognitiveservices.azure.com/"
  },
  "Security": {
    "MLOpsApiKeys": {
      "MlflowToken": "dev_mlflow_token"
    },
    "AzureCognitiveServicesApiKey": "dev_azure_cognitive_api_key"
  },
  "ModelOptions": {
    "ModelStorageBasePath": "C:/dev/models", // Example local path for development
    "ModelCacheEnabled": false // May disable cache for easier model iteration during dev
  },
  "NlpProviderOptions": {
    "ActiveProvider": "SpaCy",
    "SpaCyModelName": "en_core_web_sm",
    "SpaCyServerUrl": "http://localhost:8080",
    "AzureCognitiveServices": {
      "ApiKey": "dev_azure_language_api_key",
      "Endpoint": "https://dev-language-service.cognitiveservices.azure.com/",
      "LanguageResourceName": "dev-language-resource",
      "DeploymentName": "dev-clu-deployment"
    }
  },
  "MLOpsOptions": {
    "Mlflow": {
      "TrackingUri": "http://localhost:5000"
    },
    "AzureML": {
      "WorkspaceName": "dev-azureml-ws",
      "SubscriptionId": "dev-subscription-id",
      "ResourceGroup": "dev-resource-group"
    }
  }
}