{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Information"
      }
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5202"
      },
      "Grpc": {
        "Url": "http://localhost:5203"
      }
    }
  },
  "FeatureManagement": {
    "EnableMlflowIntegration": true, // Example: enable for local dev testing
    "UseSpaCyNlp": true
  },
  "DataServiceOptions": {
    "GrpcUrl": "http://localhost:5004" // Assuming DataService runs on this port in dev
  },
  "ModelOptions": {
    "ModelStorageBasePath": "C:/dev/ai_models_local_repo", // Example local path for development
    "ModelCacheEnabled": false // Disable caching for easier model iteration in dev
  },
  "NlpProviderOptions": {
    "ActiveProvider": "SpaCy",
    "SpaCy": {
      "ModelName": "en_core_web_sm", // Ensure this model is available locally
      "Host": "http://localhost:8080" // If using a local spaCy server instance
    },
    "AzureCognitiveServices": {
      "ApiKey": "DEV_AZURE_LANGUAGE_API_KEY_PLACEHOLDER",
      "Endpoint": "https://dev-language-service.cognitiveservices.azure.com/"
    }
  },
  "MLOpsOptions": {
    "PlatformType": "MLflow", // Or "None" if not testing MLOps locally
    "MLflow": {
      "TrackingUri": "http://localhost:5001", // Dev MLflow instance
      "RegistryUri": "http://localhost:5001"
    }
  },
  "Security": {
    "InternalServiceApiKey": "DEV_INTERNAL_API_KEY"
  }
}