{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/AIService-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "AI-Processing-Service"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5002"
      },
      "Grpc": {
        "Url": "http://localhost:5003",
        "Protocols": "Http2"
      }
    }
  },
  "FeatureManagement": {
    "EnablePredictiveMaintenance": true,
    "EnableAnomalyDetection": true,
    "EnableNlqProcessing": true,
    "EnableEdgeModelDeployment": true,
    "EnableMlflowIntegration": false,
    "EnableAzureMLIntegration": false,
    "UseSpaCyNlp": true,
    "UseAzureCognitiveNlp": false
  },
  "ServiceEndpoints": {
    "DataServiceGrpcUrl": "http://localhost:5004", // Example: Replace with actual DataService gRPC endpoint
    "MlflowUrl": "http://localhost:5000", // Example: MLflow tracking server
    "AzureCognitiveServicesEndpoint": "YOUR_AZURE_COGNITIVE_ENDPOINT_HERE"
  },
  "Security": {
    "MLOpsApiKeys": { // Example structure, adapt as needed
      "MlflowToken": "YOUR_MLFLOW_TOKEN_IF_ANY"
    },
    "AzureCognitiveServicesApiKey": "YOUR_AZURE_COGNITIVE_API_KEY_HERE" // This might be better under NlpProviderOptions if specific to it
  },
  "ModelOptions": {
    "ModelStorageBasePath": "/models", // Base path for local model storage (if not solely using Data Service)
    "DefaultPredictiveMaintenanceModelId": "pm_default_v1",
    "DefaultAnomalyDetectionModelId": "ad_default_v1",
    "ModelCacheEnabled": true,
    "ModelCacheExpirationMinutes": 60
  },
  "NlpProviderOptions": {
    "ActiveProvider": "SpaCy", // "SpaCy" or "AzureCognitive"
    "SpaCyModelName": "en_core_web_sm", // Ensure this model is downloaded for spaCy
    "SpaCyServerUrl": "http://localhost:8080", // If using spaCy via a separate HTTP server/wrapper
    "AzureCognitiveServices": {
      "ApiKey": "YOUR_AZURE_LANGUAGE_API_KEY_HERE", // Specific to Azure Language/Cognitive Services
      "Endpoint": "YOUR_AZURE_LANGUAGE_ENDPOINT_HERE",
      "LanguageResourceName": "YOUR_AZURE_LANGUAGE_RESOURCE_NAME", // For LUIS or CLU
      "DeploymentName": "YOUR_CLU_DEPLOYMENT_NAME" // For CLU
    }
  },
  "MLOpsOptions": {
    "PlatformType": "MLflow", // "MLflow" or "AzureML"
    "Mlflow": {
      "TrackingUri": "http://localhost:5000" // MLflow tracking server URI
    },
    "AzureML": {
      "WorkspaceName": "YOUR_AZUREML_WORKSPACE_NAME",
      "SubscriptionId": "YOUR_AZURE_SUBSCRIPTION_ID",
      "ResourceGroup": "YOUR_AZURE_RESOURCE_GROUP"
    }
  }
}