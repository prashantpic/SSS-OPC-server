{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/AIService-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:8080"
      },
      "Grpc": {
        "Url": "http://*:5080",
        "Protocols": "Http2"
      }
    }
  },
  "AllowedHosts": "*",
  "FeatureManagement": {
    "EnablePredictiveMaintenance": true,
    "EnableAnomalyDetection": true,
    "EnableNlqProcessing": true,
    "EnableEdgeModelDeployment": true,
    "EnableMlflowIntegration": false,
    "EnableAzureMLIntegration": false,
    "UseSpaCyNlp": true,
    "UseAzureCognitiveNlp": false
  },
  "ServiceEndpoints": {
    "DataServiceGrpcUrl": "http://localhost:50051" // Example, replace with actual DataService gRPC URL
  },
  "ModelOptions": {
    "ModelStorageBasePath": "/app/models", // Default for container, or "ModelsData" for local relative path
    "DefaultPredictiveMaintenanceModelId": "pm_default_v1",
    "DefaultAnomalyDetectionModelId": "ad_default_v1",
    "ModelCacheEnabled": true,
    "ModelCacheExpirationMinutes": 60
  },
  "NlpProviderOptions": {
    "ActiveProvider": "SpaCy", // SpaCy or AzureCognitive
    "SpaCyModelName": "en_core_web_sm", // Example spaCy model
    "AzureCognitiveServices": { // Settings specific to Azure Cognitive Services NLP
      "ApiKey": "YOUR_AZURE_COGNITIVE_SERVICES_API_KEY", // Use user-secrets or KeyVault in production
      "Endpoint": "YOUR_AZURE_COGNITIVE_SERVICES_ENDPOINT",
      "LanguageResourceName": "YOUR_AZURE_LANGUAGE_RESOURCE_NAME",
      "DeploymentName": "YOUR_AZURE_CLU_DEPLOYMENT_NAME"
    }
  },
  "MLOpsOptions": {
    "PlatformType": "MLflow", // MLflow or AzureML
    "Mlflow": { // Settings specific to MLflow
      "TrackingUri": "http://localhost:5000", // Example MLflow server URI
      "ExperimentName": "AIProcessingService_Models"
      // Add other MLflow specific settings like registry URI if different from tracking
    },
    "AzureML": { // Settings specific to Azure Machine Learning
      "WorkspaceName": "YOUR_AZURE_ML_WORKSPACE_NAME",
      "SubscriptionId": "YOUR_AZURE_SUBSCRIPTION_ID",
      "ResourceGroup": "YOUR_AZURE_RESOURCE_GROUP"
      // Add other Azure ML specific settings like endpoint details
    },
    "ApiKey": "YOUR_MLOPS_API_KEY_IF_NEEDED" // Generic API key placeholder, prefer platform-specific if available
  },
  "Security": {
    // This section can hold general security related configurations
    // API keys for MLOps or NLP providers if not configured in their specific sections
    // For production, sensitive values like API keys MUST be stored securely (e.g., Azure Key Vault, AWS Secrets Manager, HashiCorp Vault, or .NET User Secrets for local dev)
  }
}