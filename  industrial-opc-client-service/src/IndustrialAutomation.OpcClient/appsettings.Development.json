{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Opc.Ua": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "OpcClient": {
    "ClientId": "DevEdgeClient-001",
    "ServerConnections": [
      {
        "Id": "SimOpcUaServer",
        "Standard": "Ua",
        "EndpointUrl": "opc.tcp://milo.digitalpetri.com:62541/milo", // Public test server
        "SecurityPolicy": "http://opcfoundation.org/UA/SecurityPolicy#None",
        "MessageSecurityMode": "None",
        "UseAnonymous": true
      }
    ],
    "TagImport": {
      "FilePath": "Config/dev-tags.csv",
      "FileType": "CSV"
    }
  },
  "ServerApp": {
    "GrpcEndpoint": "http://localhost:5001", // Assuming local dev server runs on HTTP for simplicity
    "MessageQueue": {
      "RabbitMq": {
        "ConnectionString": "amqp://guest:guest@localhost:5672/"
      },
      "Kafka": {
        "BrokerList": "localhost:9092"
      }
    }
  },
  "EdgeAI": {
    "ModelPath": "DevModels/"
  }
}