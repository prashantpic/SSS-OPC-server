{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Opc.Ua": "Information",
        "Grpc": "Debug" 
      }
    }
  },
  "OpcClient": {
    "ClientId": "EdgeDevice001-Dev",
    "ServerConnections": [
      {
        "ServerId": "LocalOpcUaServer-Dev",
        "Standard": "Ua",
        "EndpointUrl": "opc.tcp://localhost:4840/UA/SampleServer", // Assuming same local server for dev
        "SecurityPolicyUri": "http://opcfoundation.org/UA/SecurityPolicy#None", // Less security for dev
        "MessageSecurityMode": "None",
        "UserIdentityType": "Anonymous"
      }
    ],
    "TagImport": {
      "FilePath": "Config/tags-dev.csv"
    }
  },
  "ServerApp": {
    "CommunicationMethod": "Grpc",
    "GrpcEndpoint": "http://localhost:5000", // HTTP for dev gRPC if TLS is not set up
    "MessageQueue": {
      "RabbitMq": {
        "ConnectionString": "amqp://guest:guest@localhost:5672/",
        "UseSsl": false
      },
      "Kafka": {
        "BrokerList": "localhost:9092",
        "SecurityProtocol": "Plaintext"
      }
    }
  },
  "EdgeAI": {
    "PredictionIntervalMs": 10000
  }
}