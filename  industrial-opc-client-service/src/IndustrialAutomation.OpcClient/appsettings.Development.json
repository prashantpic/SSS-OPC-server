{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Opc.Ua": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] ({SourceContext}) {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "OpcClient": {
    "ClientId": "Client_Dev_001",
    "ServerConnections": [
      {
        "ServerId": "OPC_UA_Dev_Sim",
        "Standard": "Ua",
        "EndpointUrl": "opc.tcp://localhost:4840", // Or your specific dev server
        "SecurityPolicyUri": "http://opcfoundation.org/UA/SecurityPolicy#None",
        "MessageSecurityMode": "None",
        "UserIdentityType": "Anonymous",
        "AutoAcceptUntrustedCertificates": true
      }
    ],
    "TagImport": {
      "FilePath": "config/dev_tags.csv",
      "FileType": "CSV"
    },
     "UaSubscriptions": [
      {
        "Id": "DevSensors",
        "ServerId": "OPC_UA_Dev_Sim",
        "PublishingInterval": 2000,
        "MonitoredItems": [
          {
            "TagId": "Dev.Sensor.Random", 
            "NodeId": "ns=2;s=SimulatedDevices/DeviceA/RandomValue", 
            "SamplingInterval": 1000
          }
        ]
      }
    ]
  },
  "ServerApp": {
    "CommunicationMethod": "Grpc", // Or "RabbitMq" if testing that locally
    "GrpcEndpoint": "http://localhost:7000", // Dev gRPC endpoint (non-HTTPS for simplicity if allowed)
    "MessageQueue": {
      "RabbitMq": {
        "ConnectionString": "amqp://guest:guest@localhost:5672/"
      },
      "Kafka": {
        "BrokerList": "localhost:9092"
      }
    }
  },
  "EdgeAI": {
    "Enabled": false,
    "ModelRepositoryPath": "dev_ai_models/"
  },
  "DataHandling": {
    "BufferCapacity": 100,
    "TransmissionBatchSize": 10
  }
}